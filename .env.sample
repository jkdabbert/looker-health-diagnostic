# Looker Health Diagnostic - Environment Configuration
# Copy this to .env in your project root and fill in your values

# =============================================================================
# LOOKER API CONFIGURATION (Required for live data)
# =============================================================================

# Your Looker instance base URL (without trailing slash)
# Example: https://yourcompany.cloud.looker.com
LOOKER_BASE_URL=

# Looker API credentials (create these in Looker Admin > API)
LOOKER_CLIENT_ID=
LOOKER_CLIENT_SECRET=

# =============================================================================
# AI ANALYSIS CONFIGURATION (Optional but recommended)
# =============================================================================

# Google Gemini API Key for AI-powered SQL analysis
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Environment mode
NODE_ENV=development

# =============================================================================
# DEMO/TESTING MODE
# =============================================================================

# Set to 'true' to use mock data instead of live Looker data
# Useful for testing or demonstrations
USE_MOCK_DATA=true

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable specific features
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_USAGE_ANALYTICS=true

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================

# Timeout settings (in milliseconds)
API_TIMEOUT=15000
MCP_TIMEOUT=20000

# Batch processing settings
MODEL_BATCH_SIZE=3
MAX_LOOKML_FILES=10

# =============================================================================
# BIGQUERY INTEGRATION (Future Use)
# =============================================================================

# Google Cloud Project ID (for future BigQuery integration)
GCP_PROJECT_ID=

# Service Account Path (for future BigQuery integration)  
# SERVICE_ACCOUNT_PATH=/path/to/service-account.json

ENABLE_COST_ANALYSIS=true
ENABLE_PERFORMANCE_OPTIMIZATION=true
BIGQUERY_ANALYSIS_DAYS=7